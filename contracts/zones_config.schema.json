{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "zones_config.schema.json",
  "type": "object",
  "required": ["region", "zones"],
  "properties": {
    "region": {
      "type": "object",
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" },
        "w": { "type": "number" },
        "h": { "type": "number" }
      },
      "required": ["x", "y", "w", "h"]
    },
    "zones": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "polygon"],
        "properties": {
          "id": { "type": "string" },
          "polygon": {
            "type": "array",
            "items": {
              "type": "array",
              "items": { "type": "number" },
              "minItems": 2,
              "maxItems": 2
            }
          }
        }
      }
    }
  }
}
